{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./", // Base directory for non-relative module names
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "rootDir": "./", // Root directory of input files
    "paths": {
      "*": ["node_modules/*"],
      "config/*": ["config/*"],
      "plaid/*": ["plaid/*"],
      "user/*": ["user/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "ormconfig.ts", // Include the ormconfig.ts file
    "credit-score-api/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
